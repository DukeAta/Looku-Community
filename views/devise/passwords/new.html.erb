<%= bootstrap_devise_error_messages! %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="" style="float: none; margin: 0 auto;">
        <%= f.submit "Reset my password", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <hr/>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="float: none; margin: 20px auto;">
    Don't have a Looku account? <%= link_to "Get started here", new_registration_path(:user) %>
  </div>

</div>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="float: none; margin: 0 auto;">
  <%= render "devise/shared/links" %>
</div>
