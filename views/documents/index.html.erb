
<div class="row documents-page" style="background-color: transparent;">
  <!-- SIDE PANEL - Filter panel -->
  <% if current_user %>
    <div class="documents-page-margin">
        <div class="col-md-3 leftsidebar">
          <%= render "side_bar" %>
        </div>
        <!--  Documents listing -->
        <div class="col-md-9" style="background-color: #fff;">
          <%= render "body" %>
        </div>
    </div>
  <% else %>
    <% if request.path == root_path %>

      <%= content_for :home_special do %>
        <div class="container-fluid bg-color" style="padding: 0;">
          <div id="site-wrapper" class="ready_to_improve">
            <section class="clearfix section_padding grey-bg" id="aboutContent" style="padding-top: 50px !important;">
              <div class="container" style="padding: 0;">
                <div class="columns ten offset-by-three" id="about">
                  <h2 class="center_title home-headings-uploader" style="text-align: center;">
                    Get started with Looku today!
                  </h2>
                  <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1" style="margin-bottom: 30px;">
                     <ul class="col-md-8 col-md-offset-2">
                       <li class="get-start-looku-item" style="list-style: none">
                         <i class="fa fa-check-square-o" style="color: green"></i>
                         Get paid every time your academic work is viewed by students
                       </li>
                       <li class="get-start-looku-item" style="list-style: none">
                         <i class="fa fa-check-square-o" style="color: green"></i>
                         Fast-track your employment prospects by sharing your profile
                       </li>
                       <li class="get-start-looku-item" style="list-style: none">
                         <i class="fa fa-check-square-o" style="color: green"></i>
                         Get recognized for your academic hard work and achievements
                       </li>
                     </ul>

                  </div>

                  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-10" style="float: none; margin: 0 auto; margin-top: 100px;">
                    <%= form_tag(new_registration_path(:user), :method => :get) do %>
                        <div class="input-group">
                          <input name="email" placeholder="Enter your email here for early access ..." type="text" class="form-control h-search-text-field"/>
                        <span class="input-group-addon h-search">
                          <button type="submit" class="btn btn-green btn-search-form">Signup Free</button>
                        </span>
                        </div>
                    <% end %>
                  </div>
                  <br>
                </div>
              </div>
            </section>
          </div>
        </div>
      <% end %>

    <% else %>
      <div class="body-not-login">
        <%= render "body" %>
        <div>
        <% end %>
      <% end %>
    </div>

    <script>
      $('#autocomplete-search').bind('railsAutocomplete.select', function(event, data){
        /* Do something here */
        window.location.href = "/documents?title=" + data.item.value;
      });

    </script>
</div>
  </div>

    <style>
      .get-start-looku {
          min-height: 220px;
          background: #fff;
          background-color: #fff !important;
          /* opacity: 0.5; */
          color: cadetblue !important;
          border: 1px solid #d3d3d3;
      }

      .get-start-looku-item {
          list-style: none;
          padding: 8px;
      }
    </style>