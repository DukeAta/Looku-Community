<div class="col-md-6 col-md-offset-3">
<div class="panel panel-default" style="margin-top: 50px;">
  <div class="panel-heading">
    <h4>
      Contact Us
    </h4>
  </div>

  <div class="panel-body">
    <%= form_for @message, url: contact_us_path do |message_form| %>
      <fieldset>
        <div class="form-group">
          <%= message_form.text_field :name, placeholder: "Name", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= message_form.email_field :email, placeholder: "Email", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= message_form.text_area :content, placeholder: "Message", :class => "form-control" %>
        </div>
      </fieldset>

      <fieldset>
        <div class="form-group">
          <%= message_form.submit "Send", :class => "btn btn-primary", :style => "" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
</div>